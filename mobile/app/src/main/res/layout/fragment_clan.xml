<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.fresa.pat.ClanFragment"
    android:background="@color/verdeclaro"
    >

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btncreateclan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/pressstart2pregular"
        android:text="Join a clan!"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/plataClan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="610dp"
        android:fontFamily="@font/pressstart2pregular"
        android:textSize="30sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/coinimage"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="600dp"
        android:src="@drawable/coin"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnRemoveClan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/pressstart2pregular"
        android:text="Remove Clan"
        android:textAlignment="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/clanlist_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/orbitronregular"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pressstart2pregular"
        android:padding="0dp"
        android:text="@string/fragmentclan"
        android:textAlignment="center"
        android:textSize="24sp" />

</FrameLayout>

